---
import { Icon } from 'astro-icon/components'

const stack = [
  {
    name: 'Rust',
    icon: 'mdi:language-rust',
    description: 'Langage système moderne, utilisé pour la capture réseau et les performances temps réel.',
  },
  {
    name: 'Vue.js',
    icon: 'mdi:vuejs',
    description: "Framework JavaScript progressif pour l'interface utilisateur de SONAR.",
  },
  {
    name: 'Deno',
    icon: 'simple-icons:deno',
    description: 'Runtime TypeScript sécurisé, utilisé pour le frontend.',
  },
  {
    name: 'ChatGPT',
    icon: 'simple-icons:openai',
    description: "IA conçue pour accompagner l’équipe de développement, résoudre des problèmes complexes et améliorer les solutions logicielles.",
  },
  {
    name: 'Tauri',
    icon: 'simple-icons:tauri',
    description: 'Framework léger pour créer des applications desktop avec des technologies web modernes.',
  },
  {
    name: 'packet-parser',
    icon: 'bx:archive-out', // en attendant un logo dédié
    description: 'Crate développée par Cyprien Avico pour analyser et décoder les protocoles réseau (Ethernet, IP, TCP, DNS, etc.) avec performance et extensibilité.',
  },
];
---

<section id="stack">
  <div class="container">
    <h2>Stack technique</h2>
    <div class="stack-grid">
      {stack.map((tech) => (
        <div class="stack-item">
          <Icon name={tech.icon} size="2.5rem" />
          <div>
            <h3>{tech.name}</h3>
            <p>{tech.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  section#stack {
    padding-block: 4rem;
  }

  h2 {
    font-size: var(--sl-text-4xl);
    text-align: center;
    margin-bottom: 3rem;
  }

  .stack-grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    max-width: 900px;
    margin: 0 auto;
  }

  .stack-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }

  .stack-item h3 {
    margin: 0;
    font-size: 1.2rem;
  }

  .stack-item p {
    margin: 0.25rem 0 0;
    color: #555;
    font-size: 0.95rem;
  }
</style>
