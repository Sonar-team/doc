---
const sponsors = [
  {
    name: 'Ministère des Armées',
    logo: 'https://upload.wikimedia.org/wikipedia/commons/1/18/Minist%C3%A8re_des_Arm%C3%A9es.svg',
    url: 'https://www.defense.gouv.fr',
  },
  {
    name: 'DGNUM',
    logo: 'https://www.defense.gouv.fr/sites/default/files/20220310_DGNUM_Header-page-nous-connaitre.png',
    url: 'https://www.defense.gouv.fr/dgnum',
  },
  {
    name: 'COMCYBER',
    logo: 'https://www.defense.gouv.fr/sites/default/files/styles/homepage_medallion/public/comcyber/logo-COMCYBER.PNG?itok=POqubd5u',
    url: 'https://www.defense.gouv.fr/comcyber',
  },
  {
    name: 'ANSSI',
    logo: 'https://upload.wikimedia.org/wikipedia/fr/3/31/Anssi.png',
    url: 'https://www.ssi.gouv.fr',
  },
  {
    name: 'DGA',
    logo: 'https://www.defense.gouv.fr/sites/default/files/styles/homepage_medallion/public/dga/Logotype_DGA_medaillon2.jpg?itok=-wjFdwys',
    url: 'https://www.defense.gouv.fr/dga',
  },
  {
    name: 'MARINE',
    logo: 'data:image/png;base64,',
    url: 'https://www.defense.gouv.fr/marine',
  },
];
---

<section class="sponsors">
  <h2>Partenaires institutionnels</h2>
  <div class="sponsor-grid">
    {sponsors.map((sponsor) => (
      <a href={sponsor.url} target="_blank" rel="noopener noreferrer" class="sponsor-item">
        <img src={sponsor.logo} alt={sponsor.name} />
      </a>
    ))}
  </div>
</section>

<style>
  .sponsors {
    padding: 2rem 0;
    text-align: center;
  }
  .sponsor-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2rem;
    margin-top: 1rem;
  }
  .sponsor-item img {
    max-height: 80px;
    max-width: 160px;
    object-fit: contain;
    transition: transform 0.3s ease;
  }
  .sponsor-item:hover img {
    transform: scale(1.05);
  }
</style>
